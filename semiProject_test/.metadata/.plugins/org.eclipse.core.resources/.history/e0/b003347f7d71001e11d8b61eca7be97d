    <script>
        function closeForm() {
            document.getElementById('login-form').style.display = 'none';
        }

        function checkPwd(){
                let pwdInpt = document.querySelector("#login-form input[name=userPwd]");
                let pwdCheckInput = document.querySelector("#login-form input[name=userPwdCheck]");
              
                if(pwdInpt.value !== pwdCheckInput.value){
                    alert("비밀번호가 일치하지않습니다.");
                    return false;
                }
            }
    </script>

  

